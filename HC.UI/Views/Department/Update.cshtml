
@{
    ViewBag.Title = "Departman Güncelleme";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <form class="js-validation" id="updateDepartmentForm" method="POST">
        <div class="block block-rounded">
            <div class="block-header block-header-default">
                <h3 class="block-title">@ViewBag.Title</h3>
            </div>
            <div class="block-content block-content-full">
                <div class="row items-push">
                    <div class="col-lg-6 col-xl-6 offset-lg-3 offset-xl-3">
                        <div class="mb-4">
                            <label class="form-label" for="DepartmentName">Departman Adı <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="departmentName" name="departmentName">
                        </div>

                    </div>
                </div>
                <!-- Submit -->
                <div class="row items-push">
                    <div class="col-lg-7">
                        <button type="submit" class="btn btn-primary">Güncelle</button>
                    </div>
                </div>
                <!-- END Submit -->
            </div>
        </div>
    </form>
</div>

@section Js{
    <script src="~/Javascripts/Pages/Department/updateDepartment.js"></script>
}
