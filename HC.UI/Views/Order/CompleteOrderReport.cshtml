
@{
    ViewBag.Title = "Sipariş Raporu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <!-- Dynamic Table Full Pagination -->
    <div class="block block-rounded">
        <div class="block-header block-header-default">
            <h3 class="block-title">
                @ViewBag.Title
            </h3>
        </div>
        <div class="block-content block-content-full">
            <table class="table table-bordered table-striped table-vcenter js-dataTable-full-pagination">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Sipariş Adı </th>
                        <th>Sipariş Numarası </th>
                        <th>Masa Adı</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody id="orderTableBody">
                </tbody>
            </table>
        </div>
    </div>
  
    <!-- END Dynamic Table Full Pagination -->
    <!-- Normal Modal -->
    <div class="modal fade" id="orderDetail" tabindex="-1" role="dialog" aria-labelledby="modal-large" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="block block-rounded shadow-none mb-0">
                    <div class="block-header block-header-default">
                        <h3 class="block-title">Sipariş Detay</h3>
                        <div class="block-options">
                            <button type="button" class="btn-block-option" data-bs-dismiss="modal" aria-label="Close">
                                <i class="fa fa-times"></i>
                            </button>
                        </div>
                    </div>
                    <div class="block-content fs-sm">
                        <table class="table table-bordered table-striped table-vcenter js-dataTable-full-pagination">
                            <thead>
                                <tr>
                                    <th>Ürün Adı</th>
                                    <th>Birim Fiyat</th>
                                    <th>Sipariş Miktarı</th>
                                    <th>Toplam Fiyat</th>
                                </tr>
                            </thead>
                            <tbody id="orderDetailTableBody">
                            </tbody>
                        </table>
                    </div>
                    <div class="block-content block-content-full block-content-sm text-end border-top">
                        <button type="button" class="btn btn-alt-secondary" data-bs-dismiss="modal">
                            Vazgeç!
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- END Normal Modal -->
</div>

@section Js{
    <script src="~/Javascripts/Pages/Order/completeOrderReport.js"></script>
}





