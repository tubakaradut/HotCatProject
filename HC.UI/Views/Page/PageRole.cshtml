
@{
    ViewBag.Title = "Sayfa ile Rol İlişkilendirme";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Page Content -->
<div class="content">
    <form class="js-validation" id="addPageRoleForm" method="POST">
        <div class="block block-rounded">
            <div class="block-header block-header-default">
                <h3 class="block-title">@ViewBag.Title</h3>
            </div>
            <div class="block-content block-content-full">
                <div class="row items-push">
                    <div class="col-lg-6 col-xl-6 offset-lg-3 offset-xl-3">
                        <div class="mb-4">
                            <label class="form-label" for="pageName">Sayfa Adı</label>
                            <input type="text" disabled class="form-control" id="pageName" name="pageName">
                        </div>
                        <div class="mb-4">
                            <label class="form-label" for="roleList">Roller <span class="text-danger">*</span></label>
                            <select class="js-select2 form-select" id="roleList" name="roleList" multiple style="width: 100%;" data-placeholder="Rol Seçiniz...">
                            </select>
                        </div>
                    </div>
                </div>
                <!-- Submit -->
                <div class="row items-push">
                    <div class="col-lg-7">
                        <button type="submit" class="btn btn-primary">Ekle</button>
                    </div>
                </div>
                <!-- END Submit -->
            </div>
        </div>
    </form>
</div>
@section Js{

    <script src="~/Javascripts/Pages/Page/pageRole.js"></script>
}



